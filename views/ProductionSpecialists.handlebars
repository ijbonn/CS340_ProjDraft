
<h1>Add Production Specialists</h1>

<form method="post" action="">
    <ul class="formalList">
        <li><label for="firstName">First Name: </label>
            <input type="text" name="firstName" id="firstName" placeholder="First Name"></li>  
        <li><label for="lastName">Last Name: </label>
            <input type="text" name="lastName" id="lastName" placeholder="Last Name"></li>  
        <li><label for="siteID">Site ID Number: </label>
            <input type="text" name="siteID" id="siteID" placeholder="Site ID"></li>   
        <input id="form" type="submit" value="Submit">
    </ul>
</form>
    

<div>
    <h1>Current Data:</h1>
    <table id="ProductionSpecialistsTable" class="formalTable">
        <thead>
            <tr>
                <th>Specialist ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Site ID</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#results}}
            <tr>
                <td>{{this.specialistID}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.siteID}}</td>
                <td><input id="D{{this.id}}" type="Submit" value="Delete"></td>
                <td><input id="u{{this.id}}" type="Submit" value="Update"></td>
            </tr>
            {{/results}}
        </tbody>
    </table>
</div>